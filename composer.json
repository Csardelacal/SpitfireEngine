{
	"name": "spitfire/database",
	"description": "Database components for spitfire/engine",
	"type": "library",
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"authors": [
		{
			"name": "CÃ©sar de la Cal Bretschneider",
			"email": "cesar@magic3w.com"
		}
	],
	"autoload": {
		"psr-4" : {
			"spitfire\\storage\\database\\" : "./src/"
		}
	},
	"scripts": {
		"test" : [
			"cp ./vendor/magic3w/php-coding-standard/.phpcs.xml ./.phpcs.xml",
			"./vendor/bin/phpstan analyse --level 8 src/",
			"./vendor/bin/phpunit tests"
		],
		"sniff":
			"./vendor/bin/phpcs --encoding=utf-8 -n -p $(git diff master --diff-filter=d --cached --name-only | grep -E '\\.php$')",
		"style":
			"./vendor/bin/phpcbf --encoding=utf-8 -n -p $(git diff master --diff-filter=d --cached --name-only | grep -E '\\.php$')"
	},
	"require": {
		"spitfire/collection": "^0.1.1",
		"magic3w/url-reflection": "^0.2.0",
		"psr/log": "^1.1",
		"spitfire/event": "^0.1.0",
		"spitfire/exception": "^0.1.1",
		"spitfire/contracts": "dev-master",
		"spitfire/dependency-provider": "^0.2.5"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^1.7",
		"magic3w/php-coding-standard": "^1.0",
		"monolog/monolog": "^2.3",
		"symfony/console": "^5.4",
		"spitfire/engine": "dev-master"
	},

	"repositories":
	[
			{
				"type": "vcs",
				"url": "https://github.com/Csardelacal/PHP_Codesniffer"
			}
	]
}
